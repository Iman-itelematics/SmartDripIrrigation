<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="alpha.smartdripirrigation.MainActivity">

    <TextView
        android:text="SEGMENT - 1"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:textSize="26dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="63dp"
        android:id="@+id/seg1" />

    <TextView
        android:text="SEGMENT - 2"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:id="@+id/seg2"
        android:textSize="26dp"
        android:layout_below="@+id/value1"
        android:layout_alignStart="@+id/seg1" />

    <TextView
        android:text="VALUE: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/value2"
        android:textSize="26dp"
        android:layout_below="@+id/seg2"
        android:layout_alignStart="@+id/seg2"
        android:layout_marginTop="22dp" />

    <TextView
        android:text="VALUE: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="17dp"
        android:id="@+id/value1"
        android:textSize="26dp"
        android:layout_below="@+id/seg1"
        android:layout_alignStart="@+id/seg1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/refresh"
        android:layout_alignStart="@+id/value2">

        <Button
            android:text="Go Now"
            android:background="@color/btnBackground"
            android:textColor="@color/btnTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/value2"
            android:layout_alignEnd="@+id/seg2"
            android:layout_marginTop="44dp"
            android:id="@+id/goNow"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/btnBackground"
        android:textColor="@color/btnTextColor"
        android:id="@+id/status1"
        android:layout_alignBaseline="@+id/seg1"
        android:layout_alignBottom="@+id/seg1"
        android:layout_toEndOf="@+id/seg1" />

    <Button
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/btnBackground"
        android:textColor="@color/btnTextColor"
        android:id="@+id/status2"
        android:layout_alignBaseline="@+id/seg2"
        android:layout_alignBottom="@+id/seg2"
        android:layout_alignStart="@+id/status1" />

    <Button
        android:text="Automatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/btnBackground"
        android:textColor="@color/btnTextColor"
        android:layout_alignTop="@+id/refresh"
        android:id="@+id/automatic"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/seg2" />

    <Button
        android:text="Refresh"
        android:background="@color/btnBackground"
        android:textColor="@color/btnTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/refresh"
        android:layout_below="@+id/value2"
        android:layout_alignEnd="@+id/value2" />

</RelativeLayout>
