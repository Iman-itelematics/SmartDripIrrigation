<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_simulate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="alpha.smartdripirrigation.simulate">

    <Button
        android:text="@string/endSimulate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endSimulate"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_below="@+id/backward"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="70dp"
        android:layout_alignEnd="@+id/right" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/backward"
        android:src="@drawable/backward"
        android:background="@android:color/black"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/fetch"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/right"
        android:src="@drawable/right"
        android:background="@android:color/black"
        android:layout_above="@+id/backward"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/left"
        android:src="@drawable/left"
        android:background="@android:color/black"
        android:layout_alignTop="@+id/fetch"
        android:layout_alignStart="@+id/endSimulate" />

    <Button
        android:text="@string/fetch"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:id="@+id/fetch"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/forward"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/forward"
        android:id="@+id/forward"
        android:background="@android:color/black"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/backward" />

</RelativeLayout>
